// Máscara - trocar dois bits menos ensacados para o valor "10"
fn main () {

    lut mut b: u8 = 0x55;
    lut m1: u8 = 0xfc;
    lut m2: u8 = 0x02;
    
    println! ("b = 0x {: x}", b);
    println! ("m1 = 0x {: x}", m1);
    
    b = b & m1; // Expressão
    println! ("b = b & m1 \ n");
    
    println! ("b = 0x {: x}", b);
    println! ("m2 = 0x {: x}", m2);
    
    b = b | m2; // Expressão
    println! ("b = b & m1 \ n");
    
    println! ("b = 0x {: x}", b);
}
