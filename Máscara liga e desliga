// MÁSCARA LIGA DESLIGA BIT
//Variavel inteira sem sinal cujo o valor é 0x6DB7
fn main() {
    
    //Qual o resultado da expressão a ^ 0x4 repetidamente, liga e desligao terceiro bit a partir da
direita)?
    let a:u16 = 0x6DB7;
    let mascara:u16 = 0x4;
    
    for x in 1..11{ 
    println!("a = {:b} = 0x{:X}",a,a);
    let a:u16 = a ^ mascara;
    println!("M = {:b} = 0x{:X}",mascara,mascara);
    println!("a = {:b} = 0x{:X}\n\n",a,a);
   }
    
}
